rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection: users/{userId}
    match /users/{userId} {
      allow read: if request.auth != null; // any authenticated user can read basic profiles

      allow create: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.email is string
        && request.resource.data.displayName is string
        && request.resource.data.createdAt is string;

      allow update: if request.auth != null
        && request.auth.uid == userId
        // do not allow changing uid (if provided it must match)
        && ( (request.resource.data.uid is string && request.resource.data.uid == resource.data.uid) || !(request.resource.data.uid is string) )
        // if email is provided in the update it must not change ownership
        && ( (request.resource.data.email is string && request.resource.data.email == resource.data.email) || !(request.resource.data.email is string) );

      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Chats collection: chat metadata
    match /chats/{chatId} {
      // helper: check that request.auth.uid is in members array
      function isMember(doc) {
        return request.auth != null && doc.data.members is list && request.auth.uid in doc.data.members;
      }

      allow create: if request.auth != null
        && request.resource.data.members is list
        && request.auth.uid in request.resource.data.members;

      // Allow members to read/update/delete. To quickly unblock, allow any authenticated read.
      allow read: if request.auth != null;
      allow update, delete: if resource.data.members is list && request.auth != null && request.auth.uid in resource.data.members;

      // Messages subcollection under chats/{chatId}/messages/{messageId}
      match /messages/{messageId} {
        allow create: if request.auth != null
          && request.resource.data.senderUid is string
          && request.resource.data.content is string
          && request.resource.data.timestamp is timestamp
          && request.auth.uid == request.resource.data.senderUid
          // ensure sender is a member of the parent chat
          && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members);

        allow read: if request.auth != null
          && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members);

        // Allow edits only by original sender and do not allow changing senderUid
        allow update: if request.auth != null
          && request.auth.uid == resource.data.senderUid
          && request.resource.data.senderUid == resource.data.senderUid;

        // Only message sender can delete their message
        allow delete: if request.auth != null && request.auth.uid == resource.data.senderUid;
      }
    }

    // Messages stored under a top-level messages collection: messages/{chatId}/messages/{messageId}
    match /messages/{chatId} {
      match /messages/{messageId} {
        allow create: if request.auth != null
          && request.resource.data.senderUid is string
          && request.resource.data.content is string
          && request.auth.uid == request.resource.data.senderUid
          // ensure sender is a member of the parent chat
          && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members);

        allow read: if request.auth != null
          && (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members);

        allow update: if request.auth != null
          && request.auth.uid == resource.data.senderUid
          && request.resource.data.senderUid == resource.data.senderUid;

        allow delete: if request.auth != null && request.auth.uid == resource.data.senderUid;
      }
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
